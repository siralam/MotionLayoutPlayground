<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/initial">
        <Constraint
                android:id="@+id/vTop"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
                android:id="@+id/tvFirst"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:layout_constraintTop_toBottomOf="@id/vTop"
                app:layout_constraintStart_toStartOf="parent"/>

        <Constraint
                android:id="@+id/tvSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvFirst"
                app:layout_constraintStart_toEndOf="@id/tvFirst"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/sticked">
        <Constraint
                android:id="@+id/vTop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
                android:id="@+id/tvFirst"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/vTop"
                app:layout_constraintStart_toStartOf="parent"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:scaleX="0.6"
                android:scaleY="0.6"/>

        <Constraint
                android:id="@+id/tvSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvFirst"
                app:layout_constraintStart_toEndOf="@id/tvFirst"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"/>
    </ConstraintSet>

    <Transition
            app:constraintSetEnd="@id/sticked"
            app:constraintSetStart="@id/initial">

        <OnSwipe
                app:dragDirection="dragUp"
                app:touchAnchorId="@id/vBottom"/>

    </Transition>
</MotionScene>
